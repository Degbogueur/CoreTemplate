@model UserRolesViewModel

@{
    ViewData["Title"] = "Gestion des rôles";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<a asp-action="Index" class="btn btn-sm btn-danger">Retour à la liste</a>

<div class="card shadow mt-2">
    <form asp-action="UpdateRoles" method="post">
        <div class="card-body">
            <h4 class="mb-4">@Model.UserFullName</h4>
            <input type="hidden" asp-for="UserId" />
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Roles</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <tr>
                            <td><input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" /></td>
                            <td>
                                <input type="hidden" asp-for="@Model.Roles[i].Value" />
                                <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">@Model.Roles[i].Value</label>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>        
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Valider</button>
        </div>
    </form>
</div>